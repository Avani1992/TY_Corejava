<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	
	<servlet>
	<servlet-name>loginSession</servlet-name>
	<servlet-class>com.tys.servletproject.servlet.LoginSession</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>loginSession</servlet-name>
	<url-pattern>/loginsession</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>logoutSession</servlet-name>
	<servlet-class>com.tys.servletproject.servlet.LogoutSession</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>logoutSession</servlet-name>
	<url-pattern>/logoutsession</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>homeServlet</servlet-name>
	<servlet-class>com.tys.servletproject.servlet.HomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>homeServlet</servlet-name>
	<url-pattern>/homeServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>personDetail</servlet-name>
	<servlet-class>com.tys.servletproject.servlet.PersonDetail</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>personDetail</servlet-name>
	<url-pattern>/personDetail</url-pattern>
	</servlet-mapping>
</web-app>
